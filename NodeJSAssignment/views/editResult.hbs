<div class="alert alert-success" role="alert">
  <h1 class="text-center">Result Management System</h1>
</div>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item" onclick="history.back()"><a href="/record">All records</a></li>
    <li class="breadcrumb-item active" aria-current="page">Edit Result</li>
  </ol>
</nav>
{{#if alert}}
<div class="alert alert-success " role="alert">
  {{alert}}
</div>
{{/if}}
{{#each rows}}
<form  action="/editResult/{{this.roll}}" method="post">
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" >Roll no</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" name="roll" value="{{this.roll}}" readonly>
    </div>
  </div>
  <div class="form-group row">
    <label  class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control"  name="name" value="{{this.name}}" required>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" >Date of Birth</label>
    <div class="col-sm-10">
      <input type="date" class="form-control" name="date_of_birth" value="{{this.date_of_birth}}" required>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" >Score</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" name="score" value="{{this.score}}" required>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Update</button>
  <button type="clear" class="btn btn-primary">Clear</button>
</form>
{{/each}}